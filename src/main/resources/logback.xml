<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %green([%thread]) %highlight(%-5level) %cyan(%logger{36}) - %msg%n</pattern>
        </encoder>
    </appender>
    
    <logger name="org.mongodb.driver" level="WARN" />

    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>